<!doctype html>
<html lang="en">


<!-- Required meta tags -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

<title>Carrito</title>

<body class="bodyPerfil">
        <div class="container-xxl" style="margin-top: 2%;">
                <div>

                        @{
                                if (ViewBag.Usuario.Nombre == null)
                                {
                                        <div class="cuerpoPerfil">
                                                <h1>Para comenzar ingrese un nombre de usuario.</h1>
                                                <div class="divPerfil">
                                                        <a href='@Url.Action("Index","Home")'><button type="button"
                                                                class="botonPerfil btn btn-outline-danger">Ingresar Usuario</button></a>

                                                </div>
                                        </div>
                                }
                                else
                                {
                                        <div class="cuerpoPerfil">
                                                <h1>Bienvenido @ViewBag.Usuario.Nombre!</h1>
                                                <h4 class="h4Perfil">
                                                        Gracias por contar con nosotros.
                                                </h4>
                                                <div class="divPerfil">
                                                        <div class="container">
                                                                <div class="row">
                                                                        <div class="col">
                                                                                <h4 class="h4Carrito">Ver Carrito<h4><a
                                                                                                href='@Url.Action("Carrito","Home")'><img
                                                                                                src="~/img/carrito.png"
                                                                                                style="width:35%;"></a>
                                                                        </div>
                                                                        <div class="col">
                                                                                <h4 class="h4Carrito">Cambiar Cuenta<h4><a
                                                                                                href='@Url.Action("Index","Home")'><img
                                                                                                src="~/img/salir.png"
                                                                                                style="width:35%;"></a>
                                                                        </div>
                                                                </div>

                                                        </div>
                                                </div>

                                        </div>
                                        <div><a href='@Url.Action("Marcas","Home")' class="botonVolver">Volver</a></div>
                                }

                        }








                </div>



        </div>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
                integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
                crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
                integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
                crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
                integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
                crossorigin="anonymous"></script>
        </div>
</body>

</html>
