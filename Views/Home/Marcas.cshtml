@{
    ViewData["Title"] = "Home Page";
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Marcas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body class="bodyMarcas">

    <div class="espacioMarcas">
        <img src="~/img/logo1.png">

    </div>
    <div class="cuerpoMarcas">
        <div class="GODEANO row row-cols-1 row-cols-md-3 ">
            @foreach (Marca m in ViewBag.ListaM)
            {
                <a href='@Url.Action("VerDetalleMarca", "Home", new{ID_MARCA=@m.ID_MARCA})' class="btn mb">
                    <h5 class="card-title"> @m.Nombre
                    </h5>
                </a>
            }
        </div>

    </div>
    <div style="margin-bottom: 4%;">
        <a href='@Url.Action("AgregarMarca","Home")'><button type="button" class="btn btn-outline-secondary">Agregar
                Marca</button></a>
        <a href='@Url.Action("Carrito","Home")'><button type="button" class="btn btn-outline-secondary">Ver
                Carrito</button></a>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

</body>

</html>
