@{
    ViewData["Title"] = "Ver Marca";
}



<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Marcas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body class="bodyMarcas">
    <div class="container-xxl" style="margin-top: 2%;">
        <div class="espacioProd">
            <h1> Fundador/es : @ViewBag.Marca.Fundadores</h1>
            <img src=@ViewBag.Marca.Foto style="width:30%; margin-bottom:2%;">
            <h1> Fecha de fundacion : @ViewBag.Marca.FechaFundacion.ToShortDateString()</h1>

        </div>
        <h5 class="textoProd">Productos:</h5>
        <div class="cuerpoProd">
            <div class="row row-cols-1 row-cols-md-3">
                @foreach (Productos p in ViewBag.ListaP)
                {
                    <a class="imagenMarcas"
                    href='@Url.Action("VerDetalleProducto", "Home", new{ID_Producto=@p.ID_Producto})'> <img src=@p.Foto
                        style="img {
  height: 100px;
  width: 100px;
  -o-object-fit: contain;
}">
                    </a>
                }
            </div>

        </div>
        <div style="margin-bottom: 4%; margin-top: 1%;">
            <a href='@Url.Action("AgregarProducto","Home",new {FK_marca = @ViewBag.Marca.ID_MARCA})'><button
                    type="button" class="btn btn-outline-secondary">Agregar
                    Producto</button></a>
            <a href='@Url.Action("Carrito","Home")'><button type="button" class="btn btn-outline-secondary">Ver
                    Carrito</button></a>
        </div>




        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
            crossorigin="anonymous"></script>
    </div>
</body>

</html>